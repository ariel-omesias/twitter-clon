<div class="col-12 border border-info p-3 mt-2 divBorde">
    <div class=" float-right">
        <%= link_to "<i class='fa fa-calendar'></i> ".html_safe+time_ago_in_words(tweet.created_at), tweet %>
    </div>
        <%= image_tag (tweet.user.avatar), :class => "avatar-in-tweet rounded-circle" %>
        <%= tweet.content %>
    <div class="">
        <%= link_to "<i class='fas fa-#{tweet.like_icon(current_user)} text-danger'></i>".html_safe, tweet_likes_path(tweet), method: :post %>
        <%= tweet.likes.count %> 
    </div>
    <div class="float-right">
        <%= tweet.count_rt %>
        <%= link_to "<i class='fas fa-retweet text-#{tweet.retweet_color}'></i>".html_safe, tweet_retweet_path(tweet), method: :post %>
        <% if tweet.is_retweet? %>
            <%= link_to "retweet...", tweet.tweet_ref %>
        <% end %>
    </div>
</div>